# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 80
insert_final_newline = false
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2
tab_width = 2

[*{html,css,js}]
indent_size = 2
tab_width = 2
